.row
  .col-md-12
    h1.password-reset Please reset your password for #{@user.email}
.row
  .col-md-6
    = form_for @user, url: password_reset_form_url(@user.password_reset_code), method: :patch, html: { id: 'password-reset' } do |f|
      fieldset
        .form-group
          = f.label :password, class: "sr-only"
          = f.password_field :password, placeholder: "Please enter a password", class: "form-control strength-check toggled"
        .form-group
          = f.label :password_confirmation, class: "sr-only"
          = f.password_field :password_confirmation, placeholder: "Please enter your password again", class: "form-control strength-check toggled"
        .form-group
          => f.submit "Update password", class: "btn btn-success", id: "update-button", disabled: true
          button#password-toggle.password-toggle.btn.btn-warning Show passwords
  .col-md-6
    .progress.meter
      #strength-meter.progress-bar.progress-bar-success role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0"
    .strength
      ' Time to crack:
      span#crack-time-display instant
    #match-div.match-div
    #score-quality.score-quality

